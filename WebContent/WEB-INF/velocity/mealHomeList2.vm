<script type="text/javascript" >
function xiadan(){
	$.getJSON("http://localhost:8080/usercenter/addr/wx/123",{},function(data){
		if(data.addr){
			window.location.href="http://localhost:8080/usercenter/addr/edit";
		}else{
			var arr = [];
			var list = $("#combo_1 .combo");
			for(var i =0;i<list.length;i++){
				var $meal = $(list[i]);
				var num = $meal.find('.order_num').val();
				if(num > 0){
					var meal = $meal.attr("meal");
					var date = $meal.find(".meal_date").html();
					arr[i] = {"ID":meal,"COUNT":num,"DISPATCHINGDATE":date}
				}
			}
			var json = {"addr":data.addr,"content":arr};
			$.post("http://localhost:8080/orderform/orderForm/create",json,function(data){
				alert(data);
			});
		}
	});
}
</script>
 <script type='text/javascript' src='js/DataLazyLoad.min.js'></script>
 <script type='text/javascript' charset='utf-8'>
 $(function() {
     $('.list').DataLazyLoad({load : function(page, unLocked){
