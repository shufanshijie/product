<body class="ng-scope">
	<div class="ng-scope">
		<header class="eleme-header ng-scope">
			<a class="header-menu" role="button">
				返回
			</a>
		<h1 class="header-title ng-binding">民生银行西门自提餐点</h1>
	</header>
	<script type="text/javascript">
		
	</script>
	
	<div class="center_content"><div class="ng-scope">
	
	<div class="ng-scope">
		<div class="geo-rst-filter ng-scope">
			<div class="grst-filter-toggle meat_type">
				<ul class="nav nav-tabs nav-tabs-in-mealList">
					<li class="active"><a href="#combo_1" data-toggle="tab">套餐一</a></li>
						<li><a href="#combo_2" data-toggle="tab">套餐二</a></li>
				</ul>
			</div>
			<div class="tab-content">
				<div class="tab-pane active" id="combo_1">
					<div class="gsrt-box">	
					#foreach($meal in $firstList)
						<div meal="$meal.ID" class="combo">
							<div class="ggsrt-time">
								<h1>$meal.WEEK</h1>
								<span class="meal_date">$meal.DATEFORMAT</span>
							</div>
							<span class="comboSet">$meal.NAME</span>
							<div  class="the_choice">											
									<button class="minus_icon btn btn-info btn-xs">-</button>
									<input class="order_num" value="1">
									<button class="plus_icon btn btn-info btn-xs">+</button>
							</div>
						</div>
					#end	
					<div class="list"></div>	
					</div>
				</div>
				<div class="tab-pane" id="combo_2">
					<div class="gsrt-box">
					#foreach($meal in $secondList)
						<div class="combo">
							<div class="ggsrt-time">
								<h1>$meal.WEEK</h1>
								<span>$meal.DATEFORMAT</span>
							</div>
							<span class="comboSet">$meal.NAME</span>
							<div class="the_choice">											
									<button class="minus_icon btn btn-info btn-xs">-</button>
									<input class="order_num" value="1">
									<button class="plus_icon btn btn-info btn-xs">+</button>
							</div>
						</div>
					#end
					</div>
				</div>
			</div>
		</div>
	</div>
